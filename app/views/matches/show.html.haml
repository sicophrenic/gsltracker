%h1.pagetitle
	%span
		#{@tournament.year} #{@tournament.league} Season #{@tournament.season}:
		- if @round.roundof == "RO2"
			#{@matchno}
		- else
			#{@round.roundof}
			- if @group
				Group #{@groupno}
			Match #{@matchno}

.players
	= render :partial => "players"
.games
	= render :partial => "games"